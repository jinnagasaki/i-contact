<div id="settings-edit">
 <div class="col-xs-6 settings-content">
  <% @user.errors.each do |attr, message| %>
       <div class="alert alert-danger">
       <%= message%>
       </div>
  <% end %>
  <%= form_for @user, url: settings_path, method: :put do |f| %>
   <h2>Settings</h2>
   <div class="form-body">
    <div class="form-group">
    	<%= f.label :name, "ユーザーID: @cyllabus_jp", class: "control-label" %>
    	<%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
    	<%= f.label :screen_name, "表示名: シラバス", class: "control-label" %>
    	<%= f.text_field :screen_name, class: "form-control" %>
    </div>
    <div class="form-group">
    	<%= f.label :bio, "プロフィール(200文字)", class: "control-label" %>
    	<%= f.text_area :bio, class: "form-control" %>
    </div>
<div class="form-group">
    <%=f.label :image,"ユーザー画像" %>
    <%= f.file_field :image %>
    </div>
    <div class="form-group">
    <%=f.label :bgimage,"ユーザー背景画像" %>
    <%= f.file_field :bgimage %>
    </div>
    <%= f.submit "送信する", class: "btn btn-success" %>
	</div>
  <% end %>
   
</div>

</div>

