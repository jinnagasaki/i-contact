<div id="settings-edit">
<div class="container">
<div class="row">
 <div class="col-lg-6 mt-5 settings-content">
  <% @user.errors.each do |attr, message| %>
       <div class="alert alert-danger">
       <%= message%>
       </div>
  <% end %>
  <%= form_for @user, url: settings_path, method: :put do |f| %>
   <h2>Settings</h2>
   <div class="form-body">
    <div class="form-group">
    	<%= f.label :name, "ユーザーID:", class: "control-label" %>
    	<%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
    	<%= f.label :screen_name, "表示名:", class: "control-label" %>
    	<%= f.text_field :screen_name, class: "form-control" %>
    </div>
    <div class="form-group">
    	<%= f.label :bio, "プロフィール(200文字)", class: "control-label" %>
    	<%= f.text_area :bio, class: "form-control" %>
    </div>
    <div class="form-group">
    　<%=f.label "image", :image, style: "display:none" %>
      <%= f.file_field :image, id: "lefile", type: "file", style: "display:none" %>
       <div class="input-group">
        <input type="text" id="photoCover" class="form-control" placeholder="select file...">
        <span class="input-group-btn">
          <button type="button" class="btn btn-outline-dark" onclick="$('input[id=lefile]').click();"><i class="far fa-file-image"></i> ユーザー画像選択</button>
        </span>
       </div>
    </div>
    <div class="form-group">
    　<%=f.label "image", :bgimage, style: "display:none" %>
      <%= f.file_field :bgimage, id: "bg", type: "file", style: "display:none" %>
       <div class="input-group">
        <input type="text" id="bgCover" class="form-control" placeholder="select file...">
        <span class="input-group-btn">
          <button type="button" class="btn btn-outline-dark" onclick="$('input[id=bg]').click();"><i class="far fa-file-image"></i> ユーザー背景画像選択</button>
        </span>
       </div>
    </div>
    <div class="form-group">
    <p>
    https://instawidget.net/generate
    </p>
      <%= f.label :instagram, "インスタグラム", class: "control-label" %>
      <%= f.text_area :instagram, class: "form-control" %>
    </div>


    <%= f.submit "送信する", class: "btn btn-success" %>
	</div>
  <% end %>
   
</div>
</div></div>

</div>


<script>
    $('input[id=lefile]').change(function() {
    $('#photoCover').val($(this).val().replace("C:\\fakepath\\", ""));
  });
</script>
<script>
    $('input[id=bg]').change(function() {
    $('#bgCover').val($(this).val().replace("C:\\fakepath\\", ""));
  });
</script>