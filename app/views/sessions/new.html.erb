
<div id="sessions-new">
<div class="container">
<div class="row">
 <div class="col-xs-8 col-lg-5 mx-auto mt-5">
　<% if action_name == "create" %>
	<div class="alert alert-danger">
		メールアドレスまたはパスワードが正しくありません。
	</div>
  <% end %>
  <%= form_for @user, url: sessions_path, method: :post do |f| %>
  <h2 class="text-light text-center">Log-in</h2>
  <div class="form-group">
    <%= f.label :email,"Email address", class:"text-light" %>
	<%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password", class:"text-light" %>
	<%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit "ログイン", class: "btn btn-outline-light mt-5" %>
	<%= link_to root_path, class: "float-right text-light mt-5" do %>
	新規会員登録
	<% end %>
　<% end %>
 </div>
</div>
</div>
</div>
