<p>users/_header.html.erb</p>
<div id="user-header">
	<div class="user-info">
	    <% if notice %>
	    <div class="alert alert-info">
	    <%= notice %>
	    </div>
	    <% end %>
	    <div class="img-position">
		  <%= image_tag @user.bgimage, style:"width: 100%; height:300px; border-bottom: 10px solid #f5f5f5;" %>
		  <%= image_tag @user.image, style:"border-radius: 50%; width: 200px; height: 200px; border: 10px solid #f5f5f5;", class:"img-position-absolute-user" %>
		</div>
		<h1 class="text-center" style="margin-top: 100px;">
			<%= render_user_screen_name(@user) %> @ <%= @user.name %>
		</h1>
		<div class="bio">
			<%= @user.bio %>
		</div>
		
	</div><!-- /user-info -->

<div class="container">
<div class="row">
 <div class="col-lg-3">
  <%= link_to user_path(@user), class:"btn btn-outline-secondary col-lg-12" do %>
		<div>Tweet</div>
		<div><%= @user.tubuyakis.count %></div>
  <% end %>
 </div>
 <div class="col-lg-3">
  <%= link_to follows_user_path(@user), class:"btn btn-outline-secondary col-lg-12" do %>
			<div>
				Follow
			</div>
			<div>
				<%= @user.inverse_followers.count %>
			</div>
			<% end %>
 </div>
 <div class="col-lg-3">
    <%= link_to followers_user_path(@user), class:"btn btn-outline-secondary col-lg-12" do %>
			<div>
				Follower
			</div>
			<div>
				<%= @user.followers.count %>
			</div>
			<% end %>
 </div>
 <div class="col-lg-3">
    <%= link_to favorites_user_path(@user), class:"btn btn-outline-secondary col-lg-12" do %>
			<div>
				Like
			</div>
			<div>
				<%= @user.favorites.count %>
			</div>
			<% end %>
 </div>

</div></div>

</div>
