<div id="user-header">
	<div class="user-info">
	    <% if notice %>
	    <div class="alert alert-info">
	    <%= notice %>
	    </div>
	    <% end %>
	    <div class="img-position">
	    	<% if @user.bgimage.blank? %>
    <div style="background-color: black; width: 100%; height: 300px; text-align: center; border-bottom: 10px solid #f5f5f5;">
    <i class="far fa-image" style="color: white; font-size: 180px; margin-top: 24px;"></i>
    <h1 class="p-0 m-0 text-white">No-image</h1>
    </div>

    <div class="img-position-absolute-user" style="background-color: black; border-radius: 50%; width: 200px; height: 200px; text-align: center; border: 10px solid #f5f5f5;"><i class="fas fa-user" style="color: white; font-size: 120px; margin-top: 24px;"></i>
    </div>


   <% else %>
    <%= image_tag @user.bgimage, style:"width: 100%; height:300px; border-bottom: 10px solid #f5f5f5;" %>
	<%= image_tag @user.image, style:"border-radius: 50%; width: 200px; height: 200px; border: 10px solid #f5f5f5;", class:"img-position-absolute-user" %>
   <% end %>
		</div>
	</div><!-- /user-info -->

<div class="container">
<div class="row">
<div class="col-lg-4 mb-5">
</div>
 <div class="col-lg-2 col-3 mb-5">
  <div class="btn_wrap">
  <%= link_to user_path(@user), class:"lazer col-lg-12 bg-white" do %>
  <span>
		<div class="text-secondary">
			Tweet
		</div>
		<div class="text-secondary">
			<%= @user.tubuyakis.count %>
		</div>
  </span>
  <% end %>
  </div>
 </div>
 <div class="col-lg-2 col-3 mb-5">
 <div class="btn_wrap">
  <%= link_to follows_user_path(@user), class:"lazer col-lg-12 bg-white" do %>
  <span>
			<div class="text-secondary">
				Follow
			</div>
			<div class="text-secondary">
				<%= @user.inverse_followers.count %>
			</div>
			<% end %>
  </span>
 </div>
 </div>
 <div class="col-lg-2 col-3 mb-5">
 <div class="btn_wrap">
    <%= link_to followers_user_path(@user), class:"lazer col-lg-12 bg-white" do %>
    <span>
			<div class="text-secondary">
				Follower
			</div>
			<div class="text-secondary">
				<%= @user.followers.count %>
			</div>
			<% end %>
	</span>
 </div>
 </div>
 <div class="col-lg-2 col-3 mb-5">
 <div class="btn_wrap">
    <%= link_to favorites_user_path(@user), class:"lazer col-lg-12 bg-white" do %>
    <span>
			<div class="text-secondary">
				Like
			</div>
			<div class="text-secondary">
				<%= @user.favorites.count %>
			</div>
			<% end %>
	</span>
 </div>
 </div>


</div></div>

</div>
