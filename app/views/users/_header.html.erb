<div id="user-header">
	<div class="user-info">
	    <% if notice %>
	    <div class="alert alert-info">
	    <%= notice %>
	    </div>
	    <% end %>
	    <div class="img-position">




	    	<% if @user.bgimage.blank? %>
    <%= image_tag ("no-image-bg.jpg"),style:"width: 100%; height: 300px; border-bottom: 10px solid #f5f5f5;" %>
    <%= image_tag ("no-image.jpg"), style:"border-radius: 50%; width: 200px; height:200px; border: 10px solid #f5f5f5;", class:"img-position-absolute-user" %>
   <% else %>
    <%= image_tag @user.bgimage, style:"width: 100%; height:300px; border-bottom: 10px solid #f5f5f5;" %>
	<%= image_tag @user.image, style:"border-radius: 50%; width: 200px; height: 200px; border: 10px solid #f5f5f5;", class:"img-position-absolute-user" %>
   <% end %>
		</div>
	</div><!-- /user-info -->

