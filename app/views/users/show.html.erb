<div id="users-content">
<div class="container">
<div class="row">


  <div class="col-lg-12">
 <%= render partial: "users/header" %>
  <div class="list-group">
  	<% if @user.tubuyakis.empty? %>
  	<div class="list-group-item">
  		まだツイートはありません
  	</div>
  	<% end %>
  </div>
  </div>
  <!-- left-contents -->
 <div class="col-lg-5 mt-3">
  <h1 class="text-center">
    <%= render_user_screen_name(@user) %> 
  </h1>
  <h3 class="text-center">
    @<%= @user.name %>
  </h3>
  
  <div class="mt-3" style="overflow: auto;">
            <p class="text-center"><%= @user.bio %></p>
  </div>

  <div class="w-50 mx-auto">
  <% if @user.from.blank? %>
  <% else %>
   <p class="text-left"><i class="fas fa-map-marker-alt"></i>  <%= @user.from %></p>
  <% end %>
  </div>

<div class="w-50 mx-auto">
  <% if @user.birthday.blank? %>
  <p>
  <i class="fas fa-birthday-cake"></i>  非公開
  </p>

  <% else %>
  <p class="">
  <i class="fas fa-birthday-cake"></i>  <%= @user.birthday.strftime("%Y年%m月%d日")  %></p>
   <% end %>
</div>
　 
  <!-- ツイッター・フェイスブック -->
<div style="height: 100px;">
  <% if @user.tw.blank? %>
  <% else %>
   <a class="float-left btn btn-primary w-50" href="http://twitter.com/<%= @user.tw %>"><i class="fab fa-twitter"></i></a>
 <% end %>

  <% if @user.fb.blank? %>
  <% else %>
    <a class="float-right btn w-50" href="https://www.facebook.com/<%= @user.fb %>" style="background-color: #3B5998;"><i class="fab fa-facebook-f text-white"></i></a>
  <% end %>
</div>

  <!-- インスタ -->
<% if @user.instagram.blank? %>
<% else %>
<h2 class="text-center">Instagram</h2>
<!-- InstaWidget -->
<div class="w-100" style="overflow: scroll;">
<%= @user.instagram.html_safe %>
</div>
<% end %>




 </div><!-- left-contents -->


  <div class="col-lg-7 my-3">
  <div class="line-bc bg-secondary">
    <%= render partial: "users/tubuyaki", collection: @user.tubuyakis %>
    </div>
  </div>
  </div>
</div>
</div>

