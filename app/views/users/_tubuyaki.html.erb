 <%= div_for tubuyaki, class: "list-group-item" do |t|%>
<p>users/_tubuyaki.html.erb</p>

<div class="container">
<div class="row">
  <div class="col-lg-2">
    	<%= image_tag t.user.image, style:"border-radius: 50%; width: 80px; height:80px;"%>
</div>
<div class="col-lg-10">
<h4 class="user">
	<span class="user-name">
		<%= link_to t.user.name, user_path(t.user) %>
	</span>
	<span class="user-id">
		@<%= t.user.name %>
	</span>
	<span class="time pull-right">
		<%= distance_of_time_in_words_to_now(t.created_at) %>
	</span>
	<div class="clear"></div>
</h4>
 <div class="tweet-content">
	<p><%= t.content %></p>
	<div classs="content-footer">
      <% if t.favorited_by? current_user %>
      	<%= link_to tubuyaki_favorites_path(t), method: :delete do %>
      		<i class="fas fa-heart text-danger"></i>
      	<% end %>
      <% else %>
	    <%= link_to tubuyaki_favorites_path(t), method: :post do %>
	    	<i class="far fa-heart text-secondary"></i>
	    <% end %>
      <% end %>
      <% if t.user.followed_by? current_user %>
        <%= link_to "フォロー解除", user_follows_path(t.user), method: :delete %>
      <% else %>
        <%= link_to "フォロー", user_follows_path(t.user), method: :post %>
      <% end %>
    </div>
</div>
 <% end %>
 </div>
 </div>
 </div>