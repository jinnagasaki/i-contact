<div class="col-lg-3 mb-5">


<p>users/_user.html.erb</p>
<%= div_for user do |u|%>
<div class="card col-lg-12 p-0">
  <div class="img-position">
   <% if u.bgimage.blank? %>
    <%= image_tag ("no-image-bg.jpg"),style:"width: 100%; height: 200px; border-bottom: 5px solid #f5f5f5;" %>
    <%= image_tag ("no-image.jpg"), style:"border-radius: 50%; width: 100px; height:100px; border: 5px solid #f5f5f5;", class:"img-position-absolute" %>
   <% else %>
    <%= image_tag u.bgimage,style:"width: 100%; height: 200px; border-bottom: 5px solid #f5f5f5;" %>
    <%= image_tag u.image, style:"border-radius: 50%; width: 100px; height:100px; border: 5px solid #f5f5f5;", class:"img-position-absolute" %>
   <% end %>
  </div>
  <div class="card-body my-5">
    <h5 class="card-title">
      <%= link_to user_path(u) do %>
      <%= u.screen_name %>@<%= u.name %>
      <% end %>
    </h5>
    <% if u.followed_by? current_user %>
    <%= link_to "フォロー解除", user_follows_path(u), class:"btn btn-outline-warning", method: :delete %>
  <% else %>
    <%= link_to "フォロー", user_follows_path(u),class:"btn btn-primary", method: :post %>
  <% end %>
  </div>
</div>
<% end %>
</div>
