<p> _panel.html.erb</p>
 <% if logged_in? %>
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src=".../100px180/" alt="my photo" style="width: 100%; height: 200px; background-color: gray;">
  <div class="card-body">

    <%= link_to user_path(current_user), class: "user" do %>
     <h5 class="card-title"><%= render_user_screen_name current_user %>@<% current_user.name %></h5>
    <% end %>

    <div class="user-activity">
              <div class="row">
                <div class="col-xs-4 tweets-num">
                  <div class="text">つぶやき</div>
                  <div class="num"><%= link_to current_user.tubuyakis.count, user_path(current_user) %></div>
                </div>
                <div class="col-xs-4 follow-num">
                  <div class="text">フォロー</div>
                  <div class="num">
                    <%= link_to current_user.inverse_followers.count, follows_user_path(current_user) %>
                  </div>
                </div>
                <div class="col-xs-4 follower-num">
                  <div class="text">フォロワー</div>
                  <div class="num">
                    <%= link_to current_user.followers.count, followers_user_path(current_user) %>
                  </div>
                </div>
              </div>
    </div>
    
  <% @tubuyaki.errors.full_messages.each do |message| %>
   <div class="alert alert-danger"><%= message %></div>
  <% end %>
  
  <%= form_for @tubuyaki do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", id:"exampleFormControlTextarea1", rows:"3" %>
    </div>
      <%= f.submit "つぶやく", class: "btn btn-success" %>
  <% end %>

  </div>
</div>
 <% end %>