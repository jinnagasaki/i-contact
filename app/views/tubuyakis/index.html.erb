            </div>

          </div>
      </div></div>
      </div><!-- col-xs-8 right-content -->
      <div id="page-top">
        <button href="#wrap" type="button" class="btn   btn-secondary">
        <i class="fas fa-chevron-up"></i>
        </a>
        </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    var topBtn = $('#page-top');    
    topBtn.hide();
    //スクロールが100に達したらボタン表示
    $(window).scroll(function () {
        if ($(this).scrollTop() > 100) {
            topBtn.fadeIn();
        } else {
            topBtn.fadeOut();
        }
    });
    //スクロールしてトップ
    topBtn.click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 500);
        return false;
    });
});
</script>